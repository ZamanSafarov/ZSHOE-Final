

@model ContactPost

@{
    ViewData["Title"] = "Details";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">

        <div class="col">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">Postlar</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Details</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <div class="card">
        <div class="card-block">

            <div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @Model.Name
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @Model.Phone
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @Model.Email
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:50px;">
                            @Model.Subject
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Content" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:150px;">
                            @Model.Content
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Answer" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control" style="overflow:auto; min-height:150px;">
                            @Html.Raw(Model.Answer)
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="AnswerDate" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @Model.AnswerDate
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CreatedDate" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @Model.CreatedDate
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <a asp-action="index" class="btn btn-info">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page-body end -->