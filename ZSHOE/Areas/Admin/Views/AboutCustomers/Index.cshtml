@model IEnumerable<ZSHOE.Domain.Models.Entities.AboutCustomer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.HasAccess("admin.aboutcustomers.create"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="image-cell">
                    @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                    {
                        <img src="~/uploads/images/@item.ImagePath" />
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedDate)
            </td>
            <td>
                    @if (User.HasAccess("admin.aboutcustomers.edit"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    @if (User.HasAccess("admin.aboutcustomers.details"))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    }
                    @if (User.HasAccess("admin.aboutcustomers.delete"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>


@section addcss{
    <style>
        .table {
            overflow-x: scroll;
            display: inline-block;
        }

        .image-cell {
            min-width: 100px;
            max-width: 120px;
        }

            .image-cell img {
                width: 100%;
            }
    </style>
}