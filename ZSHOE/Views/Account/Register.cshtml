
@model RegisterFormModel

@{
    ViewData["Title"] = "Register";
}

<main class="main">
	<nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
		<div class="container">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="index.html">Home</a></li>
				<li class="breadcrumb-item"><a href="#">Pages</a></li>
				<li class="breadcrumb-item active" aria-current="page">Login</li>
			</ol>
		</div><!-- End .container -->
	</nav><!-- End .breadcrumb-nav -->

	<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('assets/images/backgrounds/login-bg.jpg')">
		<div class="container">
			<div class="form-box">
				<div class="form-tab">
					<ul class="nav nav-pills nav-fill" role="tablist">
						<li class="nav-item">
							<a class="nav-link" id="signin-tab-2" asp-controller="account" asp-action="signin">Sign In</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" id="register-tab-2"asp-controller="account" asp-action="register">Register</a>
						</li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
							@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
							{
								<div class="group">
									<label class="alert alert-danger text-white">@ViewBag.Message</label>

								</div>
							}
							<form method="post" action="#">
								<div class="form-group">
									<label for="register-email-2">Name *</label>
									<input asp-for="Name" class="form-control" id="register-email-2">
								</div><!-- End .form-group -->
								<div class="form-group">
									<label for="register-email-2">Surname *</label>
									<input asp-for="Surname" class="form-control" id="register-email-2">
								</div><!-- End .form-group -->
								<div class="form-group">
									<label for="register-email-2">Your email address *</label>
									<input asp-for="Email" class="form-control" id="register-email-2">
								</div><!-- End .form-group -->

								<div class="form-group">
									<label for="register-password-2">Password *</label>
									<div style="position:relative;">
										<input asp-for="Password" class="form-control register-password" id="register-password-2">
									
										<i class="fa-solid fa-eye eye" style="color: #cc9966;"></i>
								
									</div>
								
								</div><!-- End .form-group -->
								<div class="form-group">
									<label for="register-password-2">Confirm Password *</label>
									<div style="position:relative;">
										<input asp-for="ConfirmPassword" class="form-control register-password2" id="register-password-2">
									
											<i class="fa-solid fa-eye eye2" style="color: #cc9966;"></i>
									
									</div>
								</div><!-- End .form-group -->

								<div class="form-footer">
									<button type="submit" class="btn btn-outline-primary-2">
										<span>SIGN UP</span>
										<i class="icon-long-arrow-right"></i>
									</button>

									<div class="custom-control custom-checkbox">
										<input type="checkbox" class="custom-control-input" id="register-policy-2" required>
										<label class="custom-control-label" for="register-policy-2">I agree to the <a href="#">privacy policy</a> *</label>
									</div><!-- End .custom-checkbox -->
								</div><!-- End .form-footer -->
							</form>
						
						</div><!-- .End .tab-pane -->
					</div><!-- End .tab-content -->
				</div><!-- End .form-tab -->
			</div><!-- End .form-box -->
		</div><!-- End .container -->
	</div><!-- End .login-page section-bg -->
</main><!-- End .main -->




@section addcss{
	<style>
		.eye {
			cursor: pointer;
			position: absolute;
			right: 30px;
			transform: translate(0,-182%);

		}

		.eye2 {
			cursor: pointer;
			position: absolute;
			right: 30px;
			transform: translate(0,-182%);
		}


	</style>
}
	@section addjs{
	<script>
		$(".eye2").on('click', function () {
			var passwordField = $('.register-password2');
			var passwordFieldType = passwordField.attr('type');
			var ss = $(this).siblings(passwordField);
			if (passwordFieldType == 'password') {
				ss.attr('type', 'text')
				$(this).removeClass('fa-eye').addClass('fa-eye-slash');
			} else {
				ss.attr('type', 'password')
				$(this).removeClass('fa-eye-slash').addClass('fa-eye');
			}
		})

		$(".eye").on('click', function () {
			var passwordField = $('.register-password');
			var passwordFieldType = passwordField.attr('type');
			var ss = $(this).siblings(passwordField);
			if (passwordFieldType == 'password') {
				ss.attr('type', 'text')
				$(this).removeClass('fa-eye').addClass('fa-eye-slash');
			} else {
				ss.attr('type', 'password')
				$(this).removeClass('fa-eye-slash').addClass('fa-eye');
			}
		})

	</script>

}