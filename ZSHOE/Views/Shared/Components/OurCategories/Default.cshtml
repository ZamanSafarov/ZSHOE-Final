@model IEnumerable<Category>
@{
  
    ViewData["Title"] = "Default";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-lg-4">
            <div class="banner banner-display banner-link-anim">
                <a href="#">
                    <img src="assets/images/demos/demo-12/banners/banner-5.jpg" alt="Banner">
                </a>

                <div class="banner-content banner-content-center">
                    <h3 class="banner-title text-white"><a href="#">@item.Name</a></h3><!-- End .banner-title -->
                    <h4 class="banner-subtitle text-white"><a href="#">8 Items</a></h4><!-- End .banner-subtitle -->
                    <a asp-action="index" asp-controller="shop" class="btn btn-outline-white banner-link">Shop Now</a>
                </div><!-- End .banner-content -->
            </div><!-- End .banner -->
        </div>

        <!-- End .col-sm-6 -->
    }
 
</div><!-- End .row -->