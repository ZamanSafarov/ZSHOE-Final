@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Default";
}


<div class="owl-carousel owl-simple" data-toggle="owl"
     data-owl-options='{
                                        "nav": false,
                                        "dots": true,
                                        "margin": 20,
                                        "loop": false,
                                        "responsive": {
                                            "0": {
                                                "items":1
                                            },
                                            "480": {
                                                "items":2
                                            },
                                            "768": {
                                                "items":3
                                            }
                                        }
                                    }'>
    @foreach (var item in Model)
    {
        <article class="entry entry-grid">
            <figure class="entry-media">
                <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id" asp-route-slug="@item.Slug">
                    <img src="~/uploads/images/@item.ImagePath" alt="image desc">
                </a>
            </figure><!-- End .entry-media -->

            <div class="entry-body">
                <div class="entry-meta">
                    <a href="#">@item.PublishedDate?.ToString("MMMM d, yyyy ")</a>
                </div><!-- End .entry-meta -->

                <h2 class="entry-title">
                    <a asp-action="details" asp-controller="blog" asp-route-id="@item.Id" asp-route-slug="@item.Slug">@item.Title</a>
                </h2><!-- End .entry-title -->

                <div class="entry-cats">
                    in 
                    @foreach (var tag in item.TagCloud)
                    {
                        <li>
                            <a class="blog-tag__link d-inline-block" href="#">
                                @tag.Tag?.Text
                            </a>
                        </li>
                    }
                </div><!-- End .entry-cats -->
            </div><!-- End .entry-body -->
        </article>

        <!-- End .entry -->
    }
   
</div><!-- End .owl-carousel -->




